# Locale
source ~/.config/shell/locale.sh

# Functions
source ~/.config/shell/functions.sh

# Allow local customizations in the ~/.shell_local_before file
if [ -f ~/.shell_local_before ]; then
  source ~/.shell_local_before
fi

# Allow local customizations in the ~/.bashrc_local_before file
if [ -f ~/.bashrc_local_before ]; then
  source ~/.bashrc_local_before
fi

# Settings
source ~/.config/bash/settings.bash

# Bootstrap
source ~/.config/shell/bootstrap.sh

# PGP
source ~/.config/shell/pgp.sh

# Aliases
source ~/.config/shell/aliases.sh

# Custom prompt
source ~/.config/bash/prompt.bash

# Plugins
source ~/.config/bash/plugins.bash

# Autocomplete
source ~/.config/bash/autocomplete.bash

# Allow local customizations in the ~/.shell_local_after file
if [ -f ~/.shell_local_after ]; then
  source ~/.shell_local_after
fi

# Allow local customizations in the ~/.bashrc_local_after file
if [ -f ~/.bashrc_local_after ]; then
  source ~/.bashrc_local_after
fi
